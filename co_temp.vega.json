{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/shuenyng/3179/main/GlobalWeatherRepository.csv"},
  "mark": "circle",
  "width": 450,
  "height": 300,
  "title": "Relationship between Carbon Monoxide Emission and Temperature",
  "encoding": {
    "facet": {
      "field": "air_quality_us-epa-index",
      "type": "ordinal",
      "columns": 3
    },
    "x": {
      "field": "temperature_celsius",
      "type": "quantitative",
      "title": "Temperature (Celsius)"
    },
    "y": {
      "field": "air_quality_Carbon_Monoxide",
      "type": "quantitative",
      "title": "Carbon Monoxide"
    },
    "color": {
      "condition": {"selection": "highlight", "value": "red"},
      "value": "f5a201"
    },
    "tooltip": [
      {"field": "temperature_celsius", "title": "Temperature (Celsius)"},
      {"field": "air_quality_Carbon_Monoxide", "title": "Carbon Monoxide"},
      {"field": "location_name", "title": "Location"},
      {"field": "region", "title": "Region"},
      {"field": "country", "title": "Country"}
    ]
  },
  "selection": {
    "highlight": {
      "type": "single",
      "empty": "none",
      "on": "mouseover"
    }
  },
  "config": {
    "axis": {
      "labelAngle": 0,
      "labelLimit": 200,
      "labelPadding": 10
    }
  }
}
