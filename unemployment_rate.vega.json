{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/shuenyng/3179/main/data/world-data-2023.csv"
  },
  "params": [
    {
      "name": "Top_k_Continent",
      "value": 5,
      "bind": {
        "input": "select",
        "options": ["6", "3", "2"],
        "labels": ["Top 6", "Top 3", "Top 2"],
        "name": "Continent Rank: "
      }
    },
    {
      "name": "Top_k_Country",
      "value": 10,
      "bind": {
        "input": "select",
        "options": ["20", "15", "10", "5", "3"],
        "labels": ["Top 20", "Top 15", "Top 10", "Top 5", "Top 3"],
        "name": "Country Rank: "
      }
    }
  ],
  "hconcat": [
    {
      "width": 450,
      "height": 300,
      "title": {"text": "Unemployment rate by Continent"},
      "background":"#d7d7d7",
      "layer": [
        {
          "params": [
            {
              "name": "sel_Continent",
              "select": {"type": "point", "fields": ["Continent"]}
            },
            {
              "name": "highlight",
              "select": {"type": "point", "on": "mouseover"}
            }
          ],
          "transform": [
            {"filter": {"param": "sel_Continent"}},
            {
              "aggregate": [
                {"op": "mean", "field": "Unemployment rate", "as": "Avg_unemployment"}
              ],
              "groupby": ["Continent"]
            },
            {
              "window": [{"op": "rank", "as": "rank"}],
              "sort": [{"field": "Avg_unemployment", "order": "descending"}]
            },
            {"filter": "datum.rank <= Top_k_Continent"},
            {"calculate": "split(datum.Continent, ' ')", "as": "Y"}
          ],
          "mark": {
            "type": "bar",
            "fill": "#0b3e26d2",
            "stroke": "black",
            "cursor": "pointer"
          },
          "encoding": {
            "tooltip": [
              {"field": "Continent", "type": "nominal", "title": "Continent"},
              {
                "field": "Avg_unemployment",
                "type": "quantitative",
                "title": "Average Unemployment"
              }
            ],
            "x": {
              "field": "Avg_unemployment",
              "type": "quantitative",
              "title": "Average Unemployment"
            },
            "y": {
              "sort": {"field": "Avg_unemployment", "order": "descending"},
              "field": "Y",
              "type": "ordinal",
              "title": null
            },
            "fillOpacity": {
              "condition": {"param": "sel_Continent", "value": 1},
              "value": 0.3
            },
            "color": {"field": "rank", "legend": false},
            "strokeWidth": {
              "condition": {"param": "highlight", "empty": false, "value": 1},
              "value": 0.5
            },
            "stroke": {"value": "black"}
          }
        }
      ]
    },
    {
      "width": 450,
      "height": 300,
      "title": {"text": "Unemployment by Country"},
      "background":"#d7d7d7",
      "layer": [
        {
          "params": [
            {
              "name": "sel_Country",
              "select": {"type": "point", "fields": ["Country"]}
            },
            {
              "name": "highlight_2",
              "select": {"type": "point", "on": "mouseover"}
            }
          ],
          "transform": [
            {"filter": {"param": "sel_Country"}},
            {
              "aggregate": [
                {"op": "mean", "field": "Unemployment rate", "as": "Avg_unemployment"}
              ],
              "groupby": ["Country"]
            },
            {
              "window": [{"op": "rank", "as": "rank"}],
              "sort": [{"field": "Avg_unemployment", "order": "descending"}]
            },
            {"filter": "datum.rank <= Top_k_Country"}
          ],
          "mark": {
            "type": "bar",
            "fill": "#688568cb",
            "stroke": "black",
            "cursor": "pointer"
          },
          "encoding": {
            "tooltip": [
              {"field": "Country", "type": "nominal", "title": "Country"},
              {
                "field": "Avg_unemployment",
                "type": "quantitative",
                "title": "Average Unemployment"
              }
            ],
            "x": {
              "field": "Avg_unemployment",
              "type": "quantitative",
              "title": "Average Unemployment"
            },
            "y": {
              "sort": {"field": "Avg_unemployment", "order": "descending"},
              "field": "Country",
              "type": "ordinal",
              "title": null
            },
            "fillOpacity": {
              "condition": {"param": "sel_Country", "value": 1},
              "value": 0.3
            },
            "color": {"field": "rank", "legend": false},
            "strokeWidth": {
              "condition": {"param": "highlight_2", "empty": false, "value": 1},
              "value": 0.5
            },
            "stroke": {"value": "black"}
          }
        }
      ]
    }
  ],
  "config": {
    "facet": {"spacing": 3},
    "title": {"font": "sans-serif", "fontSize": 14},
    "bar": {"cornerRadius": 3}
  }
}
