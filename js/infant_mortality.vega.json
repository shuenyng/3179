{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text" : "Infant Mortality of each Country", "fontSize" : 18, "anchor" : "middle" },
  "width": 700,
  "height": 450,
  "background":"#e1e6dd",
  "data": {
    "url": "https://raw.githubusercontent.com/shuenyng/3179/main/ne_110m_admin_0_countries.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/shuenyng/3179/main/oceans.json",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/shuenyng/3179/main/ne_110m_graticules_30.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/shuenyng/3179/main/data/world-data-2023.csv"
            },
            "key": "Country",
            "fields": ["Infant mortality"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Infant mortality",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [0,20,40,60,80,100],
            "range": ["white", "#E0F2E9", "#A2D5A2", "#90C990","#3AA655", "#145E32", " #0B3E26"]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "country"},
          {"field": "Infant mortality", "type": "quantitative", "title": "Infant mortality"}
        ]
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/data/countryInfo.csv"
            },
            "key": "name",
            "fields": ["latitude", "longitude"]
          }
        }
      ],
      "mark": {"type": "text"},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {"field": "properties.NAME", "type": "nominal"},
        "opacity": {
          "condition": {
            "test": "datum['properties.NAME'] == 'Australia'",
            "value": 0
          },
          "value": 0
        }
      }
    }
  ],
  "config": {}
}