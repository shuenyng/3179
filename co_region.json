{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/shuenyng/3179/main/GlobalWeatherRepository.csv"
    },
    "title": "CO (Carbon Monoxide) by Region",
    "layer": [
      {
        "mark": {
          "type": "bar",
          "tooltip": true
        },
        "encoding": {
          "x": {
            "field": "region",
            "type": "nominal",
            "title": "Region",
            "axis": {"labelAngle": 360},
            "sort": {"op": "sum", "field": "air_quality_Carbon_Monoxide", "order": "ascending"}
          },
          "y": {
            "field": "air_quality_Carbon_Monoxide",
            "type": "quantitative",
            "title": "CO (Carbon Monoxide)"
          },
          "color": {
            "field": "region",
            "type": "nominal",
            "legend": null,
            "scale": {"range": ["#fc5b05", "#fc8505", "#fc2a05", "#fac525", "#fca205"]}
          },
          "tooltip": [
            {"field": "country", "title": "Country"},
            {"field": "air_quality_Carbon_Monoxide", "title": "CO (Carbon Monoxide)"}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "baseline": "middle",
          "dy": -5,
          "color": "black"
        },
        "encoding": {
          "x": {
            "field": "region",
            "type": "nominal",
            "sort": {"op": "sum", "field": "air_quality_Carbon_Monoxide", "order": "ascending"}
          },
          "y": {
            "aggregate": "sum",
            "field": "air_quality_Carbon_Monoxide",
            "type": "quantitative",
            "title": "Total CO"
          },
          "text": {
            "aggregate": "sum",
            "field": "air_quality_Carbon_Monoxide",
            "type": "quantitative",
            "format": ".2f",
            "title": "Total CO"
          }
        }
      }
    ],
    "config": {
      "view": {
        "width": 800,
        "height": 400
      },
      "selection": {
        "highlight": {
          "type": "single",
          "empty": "none",
          "on": "mouseover"
        }
      }
    }
  }
  