{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text" : "UV Index of each country", "fontSize" : 18, "anchor" : "middle" },
  "width": 1000,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/shuenyng/3179/main/ne_110m_admin_0_countries.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/shuenyng/3179/main/oceans.json",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/shuenyng/3179/main/ne_110m_graticules_30.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/shuenyng/3179/main/GlobalWeatherRepository.csv"
            },
            "key": "country",
            "fields": ["uv_index"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "uv_index",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1,2,3,4,5],
            "range": ["white", "#669966", "003333", "#ffd358", "#f5a201","#cc0000"]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "country"},
          {"field": "uv_index", "type": "quantitative", "title": "uv_index"}
        ]
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/data/countryInfo.csv"
            },
            "key": "name",
            "fields": ["latitude", "longitude"]
          }
        }
      ],
      "mark": {"type": "text"},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {"field": "properties.NAME", "type": "nominal"},
        "opacity": {
          "condition": {
            "test": "datum['properties.NAME'] == 'Australia'",
            "value": 0
          },
          "value": 0
        }
      }
    }
  ],
  "config": {}
}